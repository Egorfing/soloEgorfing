    data-newwindbar="true"
    data-spots="true">
</div>

{{#if dayCars}}
<h1>Добраться на спот в ближайшие дни:</h1>
<div style="display: flex; flex-direction:row; align-items:flex-start; flex-wrap:wrap; margin:20px 300px; padding: 50px">
 {{#each dayCars}}
<div style="margin: 0 20px; font-size:20px; font-weight:600">{{this.date}}</div>
<div  style="display: flex;;border-radius: 20px; padding: 50px; justify-content: space-around;">
  {{#each this.cars}}
    <div class="divDay" >
      <div>Время выезда: <p>{{this.time}}</p></div>
      <div>Место сбора: <p>{{this.location}}</p></div>
      <div>Количество мест: <p>{{this.seat}}</p></div>
      <button class="w-100 btn btn-lg btn-primary">присоединиться</button>
    </div>
  {{/each}}
</div>
{{/each}} 
</div>
{{/if}}
<button class="button btn btn-primary" style="height: 60px; font-size:20px">Смотреть прогноз в виде таблицы</button>
